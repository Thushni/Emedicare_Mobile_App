<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".SelectDoctor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/main_toolbar" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/doctor1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <Button
                    android:id="@+id/upUser1"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="3dp"
                    android:backgroundTint="#279F2C"
                    android:text="Select"
                    android:textColor="#ffffff"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:onClick="ClickDoc2"/>


            </LinearLayout>

            <TextView
                android:id="@+id/Doc1Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dr. Anoma Weerasinghe"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="6dp"/>
            <TextView
                android:id="@+id/Doc1Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MBBS (Colombo) CCA (Colombo)"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_marginTop="0dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/doctor2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <Button
                    android:id="@+id/upUser2"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="3dp"
                    android:backgroundTint="#279F2C"
                    android:text="Select"
                    android:textColor="#ffffff"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:onClick="ClickDoc2"/>


            </LinearLayout>

            <TextView
                android:id="@+id/Doc2Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dr. Amila Pathmasiri"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="6dp"/>
            <TextView
                android:id="@+id/Doc2Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MBBS (Colombo) CCA (Colombo)"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_marginTop="0dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/doctor3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <Button
                    android:id="@+id/upUser3"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="3dp"
                    android:backgroundTint="#279F2C"
                    android:text="Select"
                    android:textColor="#ffffff"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:onClick="ClickDoc3"/>


            </LinearLayout>

            <TextView
                android:id="@+id/Doc3Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dr. Senarath Kumara"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="6dp"/>
            <TextView
                android:id="@+id/Doc3Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MBBS (Colombo) CCA (Colombo)"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_marginTop="0dp"/>
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <include layout="@layout/main_nav_drawer" />

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>


